{
  "name": "use-chat-submit",
  "private": false,
  "version": "1.0.3",
  "description": "React hook to handle chat textarea submit behaviors (Enter vs Mod+Enter) with IME-safe handling.",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "vite",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run lint && pnpm run typecheck && pnpm build",
    "lint": "eslint src/useChatSubmit.ts",
    "demo:build": "vite build",
    "demo:preview": "vite preview --open"
  },
  "keywords": [
    "react"
  ],
  "peerDependencies": {
    "react": ">=19"
  },
  "devDependencies": {
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitejs/plugin-react": "^5.0.2",
    "eslint": "^9.34.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "user-agent-data-types": "^0.4.2",
    "vite": "^7.1.3"
  },
  "author": "catnose <hi@catnose.me> (https://catnose.me)",
  "homepage": "https://github.com/catnose99/use-chat-submit",
  "license": "MIT",
  "packageManager": "pnpm@10.13.1"
}
